@model ContatoModel
@{
    ViewData["Title"] = "Criar contato";
}

<div class="text-center">

    <br />

    <h1 class="display-4">Cadastrar contato</h1>

</div>

<form asp-controller="Contato" asp-action="Criar" method="post">

    <div class="mb-3">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="mb-3">
        <label for="e-mail">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do contato">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="mb-3">
        <label for="fone">Telefone</label>
        <input type="text" asp-for="Telefone" class="form-control" placeholder="Digite o telefone do contato">
        @Html.ValidationMessageFor(x => x.Telefone)
    </div>

    <button type="submit" class="btn btn-primary btn-lg">Adicionar</button>
    <a class="btn btn-danger btn-lg" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>

